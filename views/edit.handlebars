<link rel="stylesheet" href="/stylesheets/edit.css">

<form action="/restaurants/{{ restaurant._id }}/edit" method="POST" class="basic-grey">
  <h1>Edit Restaurant
    <span>Please fill all the texts in the fields.</span>
  </h1>
  <label>
    <span>name :</span>
    <input type="text" placeholder="name" name="name" value="{{ restaurant.name }}">
  </label>
  <label>
    <span>category :</span>
    <input type="text" placeholder="category" name="category" value="{{ restaurant.category }}">
  </label>
  <label>
    <span>image :</span>
    <input type="text" placeholder="image" name="image" value="{{ restaurant.image }}">
  </label>
  <label>
    <span>location :</span>
    <input type="text" placeholder="location" name="location" value="{{ restaurant.location }}">
  </label>
  <label>
    <span>phone :</span>
    <input type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}">
  </label>
  <label>
    <span>google_map :</span>
    <input type="text" placeholder="google_map" name="google_map" value="{{ restaurant.google_map }}">
  </label>
  <label>
    <span>rating :</span>
    <input type="text" placeholder="rating" name="rating" value="{{ restaurant.rating }}">
  </label>
  <label>
    <span>description :</span>
    <textarea class="input-description" type="text" placeholder="description" name="description">{{ restaurant.description }}</textarea>
  </label>
  <div class="d-flex">
    <button class="btn btn-primary ml-auto mr-2" type="submit">Save</button>
    <a class="btn btn-secondary" href="/">back</a>
  </div>
</form>
